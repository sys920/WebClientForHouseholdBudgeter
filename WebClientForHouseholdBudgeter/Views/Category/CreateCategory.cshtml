@model CreateCategoryViewModel
@{
    ViewBag.Title = "CreateCategory";
}

<div class="container-fluid">

    <div class="py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create New Category</h6>
        <div class="text-danger">@Html.ValidationSummary(false)</div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">

                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" name="HouseHoldId" value=@ViewBag.HouseHoldId />
                    <table class="table table-bordered display-5" cellspacing="0">
                        <thead>
                            <tr>
                                <td>
                                    <div>
                                        @Html.LabelFor(Model => Model.Name, "Name : ")
                                        @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control  ", placeholder = "Type Category name" })
                                    </div>
                                    <div class="text-danger"> @Html.ValidationMessageFor(Model => Model.Name) </div>
                                    <div>&nbsp;</div>


                                    <div>
                                        @Html.LabelFor(Model => Model.Description, "Description : ")
                                        @Html.TextBoxFor(Model => Model.Description, new { @class = "form-control  ", placeholder = "Type Category Description" })
                                    </div>
                                    <div class="text-danger"> @Html.ValidationMessageFor(Model => Model.Description) </div>
                                    <div> </div>
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">SAVE</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
