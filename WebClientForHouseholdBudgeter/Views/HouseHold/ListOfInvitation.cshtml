@model  List<ListOfInvitation>

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Invitaion</h6>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered display-5" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Accept</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                            {
                                foreach (var ele in Model)
                                {
                                    <tr>

                                        <td>@ele.Id</td>
                                        <td>@ele.Name</td>
                                        <td>@ele.Description</td>

                                        <td class="text-center">
                                            <a href="@Url.Action("AcceptInvitation", "HouseHold", new {id =ele.Id})"> <i class="fas fa-tasks"></i> </a>
                                        </td>
                                      
                                    </tr>
                                }
                            }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>