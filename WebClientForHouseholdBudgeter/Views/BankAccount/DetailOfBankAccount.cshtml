@model DetailOfBankAccountViewModel

<div class="container-fluid">
    <div class="py-3">
        <h6 class="m-0 font-weight-bold text-primary">BankAccount Detail</h6>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">@Model.Name</h6>
                </div>
                <div class="card-body">
                    <div>
                        BankAccountId : @Model.Id
                    </div>
                    <div>
                        Description : @Model.Description
                    </div>
                    <div>
                        Balance : $@Model.Balance
                    </div>
                    <div>
                        <span>Created Date : @Model.Created </span> &nbsp; &nbsp;
                        @if (Model.Updated.HasValue)
                        {
                            <span>Updated Date : @Model.Updated</span>
                        }
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>





