@model  List<ListOFHouseHoldForBankAccountViewModel>

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="py-3">
        <h6 class="m-0 font-weight-bold text-primary">List Of HouseHold</h6>
        @if (TempData["Message"] != null)
        {
            <div class="text-danger">@TempData["Message"]</div>
        }
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered display-5" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>HouseHoldName</th>
                            <th>Description</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th class="text-center">#BankAccount</th>
                            <th class="text-center">Add BankAccount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ele in Model)
                        {
                            <tr>
                                <td> @ele.Id</td>
                                <td> @ele.Name</td>
                                <td> @ele.Description</td>
                                <td> @ele.Created.ToString("MM/dd/yyyy")</td>
                                <td> @(ele.Updated!= null ? ele.Updated.Value.ToString("MM/dd/yyyy") : "")</td>
                                <td class="text-center">
                                    <a href="@Url.Action("ListOfBankAccount","BankAccount", new {id =ele.Id})">@ele.NumberOfBankAccount</a>
                                </td>

                                <td class="text-center">
                                    @if (ele.IsOwner)
                                    {
                                        <a href="@Url.Action("CreateBankAccount", "BankAccount", new {id =ele.Id})">
                                            <button> <i class="fas fa-plus"></i></button>
                                        </a>
                                    }

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
